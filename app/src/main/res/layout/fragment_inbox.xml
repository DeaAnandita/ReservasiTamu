<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="8dp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbardesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/red"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:gravity="center"
        app:cardCornerRadius="10dp"
        android:orientation="vertical"
        android:layout_margin="20dp"
        app:cardElevation="3dp"
        android:layout_gravity="center"
        app:cardUseCompatPadding="true"
        android:clickable="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:id="@+id/vInbox"
                android:layout_width="12dp"
                android:layout_height="140dp"
                android:background="@color/hijau"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:orientation="vertical"
            android:padding="5dp">
        <TextView
            android:id="@+id/txttitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="50dp"
            android:text="Administrasi"/>

        <TextView
            android:id="@+id/txtisi"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="Pembayaran anda telah diterima oleh admin."/>
        <TextView
            android:id="@+id/txttype"
            android:layout_width="140dp"
            android:layout_height="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:visibility="gone"/>
        <TextView
            android:layout_width="140dp"
            android:layout_height="16dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="20dp"
            android:text="6-8-2019   19.54 WIB"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:gravity="center"
        app:cardCornerRadius="10dp"
        android:orientation="vertical"
        android:layout_margin="20dp"
        app:cardElevation="3dp"
        android:layout_gravity="center"
        app:cardUseCompatPadding="true"
        android:clickable="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:id="@+id/vInbox2"
                android:layout_width="12dp"
                android:layout_height="140dp"
                android:background="@color/merah"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:orientation="vertical"
            android:padding="5dp">
        <TextView
            android:id="@+id/txttitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="50dp"
            android:text="Kirim ulang foto"/>

        <TextView
            android:id="@+id/txtisi2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="Foto yang anda kirimkan mengalami maslah,dimohon mengirim ulang foto untuk melengkapi data yang ada."/>
        <TextView
            android:id="@+id/txttype2"
            android:layout_width="140dp"
            android:layout_height="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:visibility="gone"/>
        <TextView
            android:layout_width="140dp"
            android:layout_height="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="4-8-2019   07.54 WIB"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:gravity="center"
        app:cardCornerRadius="10dp"
        android:orientation="vertical"
        android:layout_margin="20dp"
        app:cardElevation="3dp"
        android:layout_gravity="center"
        app:cardUseCompatPadding="true"
        android:clickable="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:id="@+id/vInbox3"
                android:layout_width="12dp"
                android:layout_height="140dp"
                android:background="@color/biru"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:orientation="vertical"
            android:padding="5dp">
        <TextView
            android:id="@+id/txttitle3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="50dp"
            android:text="Pengumuman"/>

        <TextView
            android:id="@+id/txtisi3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="Anda telah berhasil mendaftar untuk berkunjung ke Animation Studio RUS, Selamat berkunjung."/>
        <TextView
            android:id="@+id/txttype3"
            android:layout_width="140dp"
            android:layout_height="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:visibility="gone"/>
    <TextView
        android:layout_width="140dp"
        android:layout_height="16dp"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="20dp"
        android:text="6-8-2019   19.54 WIB"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>