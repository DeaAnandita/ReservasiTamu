<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".HomeDashboard">
                <ImageView
                    android:id="@+id/ivhome"
                    android:layout_width="wrap_content"
                    android:layout_height="220dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@mipmap/home"
                    app:layout_constraintRight_toRightOf="parent"
                    android:scaleType="fitXY"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cdcenter"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ivhome"
                    app:layout_constraintBottom_toBottomOf="@+id/ivhome"
                    android:layout_width="280dp"
                    app:cardCornerRadius="8dp"
                    android:layout_height="70dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@mipmap/logo"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="20dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="SMK Raden Umar Said"
                                android:layout_marginLeft="15dp"
                                android:textStyle="bold"
                                android:layout_marginTop="20dp"
                                android:textColor="@color/text"
                                android:textSize="15dp"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Jalan Sukun Raya 9, Besito, Gebog, Kudus"
                                android:layout_marginLeft="15dp"
                                android:textColor="@color/text"
                                android:textSize="10dp"/>
                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/txtslmt"
                    android:layout_width="256dp"
                    android:layout_height="47dp"
                    android:textAlignment="center"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/text"
                    android:text="SELAMAT DATANG DI STUDIO ANIMASI SMK RADEN UMAR SAID KUDUS"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cdcenter" />

                <LinearLayout
                    android:id="@+id/lnpk12"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@+id/txtslmt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cdpaket1"
                    android:layout_width="160dp"
                    android:layout_height="190dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="8dp"
                    android:background="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/circle"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="PAKET 1"
                            android:gravity="center"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/white"
                            android:textSize="15dp"
                            android:textStyle="bold"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="63dp"
                            android:layout_marginTop="36dp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/qwer" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Keliling Studio"
                            android:gravity="center"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/text"
                            android:textSize="15dp"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Rp 30.000,- / Orang"
                            android:gravity="center"
                            android:textColor="@color/text"/>
                    </LinearLayout>



                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cdpaket2"
                    android:layout_width="160dp"
                    android:layout_height="190dp"
                    app:cardCornerRadius="8dp"
                    android:layout_margin="10dp"
                    android:background="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/circle"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="PAKET 2"
                            android:gravity="center"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/white"
                            android:textSize="15dp"
                            android:textStyle="bold"/>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="63dp"
                            android:layout_marginTop="36dp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/qwer" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Keliling Studio + Makan"
                            android:gravity="center"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/text"
                            android:textSize="14dp"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Rp 30.000,- / Orang"
                            android:gravity="center"
                            android:textColor="@color/text"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnpk34"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@+id/lnpk12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:id="@+id/cdpaket3"
                    android:layout_width="160dp"
                    android:layout_height="190dp"
                    app:cardCornerRadius="8dp"
                    android:layout_margin="10dp"
                    android:background="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/circle"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="PAKET 3"
                            android:gravity="center"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/white"
                            android:textSize="15dp"
                            android:textStyle="bold"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="63dp"
                            android:layout_marginTop="36dp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/qwer" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Keliling Studio + Foto"
                            android:gravity="center"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/text"
                            android:textSize="14dp"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Rp 30.000,- / Orang"
                            android:gravity="center"
                            android:textColor="@color/text"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cdpaket4"
                    android:layout_width="160dp"
                    android:layout_height="190dp"
                    app:cardCornerRadius="8dp"
                    android:layout_margin="10dp"
                    android:background="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/circle"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="PAKET 4"
                            android:gravity="center"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/white"
                            android:textSize="15dp"
                            android:textStyle="bold"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="63dp"
                            android:layout_marginTop="36dp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/qwer" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Keliling Studio + Makan + Foto"
                            android:gravity="center"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/text"
                            android:layout_marginHorizontal="1dp"
                            android:textSize="15dp"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Rp 30.000,- / Orang"
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/text"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                </LinearLayout>
                <Button
                    app:layout_constraintTop_toBottomOf="@id/lnpk34"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@drawable/btndb"
                    android:text="REGISTRASI"
                    android:textColor="@color/white"/>
            </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>