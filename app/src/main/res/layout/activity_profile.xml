<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbarprofil"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        android:theme="@style/ActionBarThemeOverlay">

    </androidx.appcompat.widget.Toolbar>

   <LinearLayout
       android:id="@+id/lnear"
       android:layout_width="match_parent"
       android:layout_height="300dp"
       app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/toolbarprofil"
       android:background="@color/pakt"
       android:orientation="horizontal" />

    <ImageView
        android:id="@+id/ivuser"
        android:layout_width="150dp"
        android:layout_height="140dp"
        android:src="@mipmap/iconprofil"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarprofil" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vani Aviana"
        android:textSize="19dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivuser"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cdid"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@+id/lnear"
        app:layout_constraintBottom_toBottomOf="@+id/lnear"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/linedb"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="vani2018rplrus2@gmail.com"
            android:textColor="@color/red"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+62 8213408586"
            android:textColor="@color/red"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:textSize="15dp"/>

        </LinearLayout>


    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/btnlogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:text="Log Out"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/cdid"
        android:background="@drawable/btnlogout"/>


     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="Copyright Â© 2019 RPL SMK RUS Android Team"
         android:textColor="@color/red"
         android:textSize="14dp"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintBottom_toBottomOf="parent"
         android:gravity="center"/>



</androidx.constraintlayout.widget.ConstraintLayout>